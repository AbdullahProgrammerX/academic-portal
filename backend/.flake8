[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    env,
    migrations,
    settings.py,
    */migrations/*,
    */tests/*
ignore =
    E501,  # line too long (handled by Black)
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
per-file-ignores =
    __init__.py:F401
